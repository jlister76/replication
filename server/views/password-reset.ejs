<section>
  <form action="/reset-password?access_token=<%= accessToken %>" method="post">
    <fieldset class="field_set" style="padding:1rem; margin:1rem;background-color: #fafafa;">
      <legend>Password reset form</legend>
      <div>
        <label for="password">New password:</label>
        <input type="text" name="password">
      </div>
      <div>
        <label for="confirmation">Confirm new password:</label>
        <input type="password" name="confirmation">
      </div>
      <div>
        <input type="submit" value="Reset password">
      </div>
    </fieldset>
  </form>
</section>
